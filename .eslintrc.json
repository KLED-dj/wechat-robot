{
    "root": true,
    "overrides": [
        {
            "env": {
                "node": true
            },
            "files": [
                "src/**/*.js"
            ],
            "extends": [
                "eslint:recommended",
                "plugin:import/recommended",
                "plugin:jsdoc/recommended"
            ],
            "plugins": [
                "prefer-arrow"
            ],
            "rules": {
                "semi": [
                    "error",
                    "always"
                ],
                "quotes": [
                    "error",
                    "single"
                ],
                "no-prototype-builtins": "off",
                "no-case-declarations": "off",
                "jsdoc/require-returns": 0
            }
        }
    ]
}